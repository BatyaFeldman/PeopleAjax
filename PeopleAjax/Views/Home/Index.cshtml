

<div class="container" style="margin-top:40px;">
    <table class="table table-bordered" id="people-table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Action</th>
        </tr>
        
    </table>

    <div class="row col-md-12">
        <input type="text" id="first-name" placeholder="First Name" class="form-control col-md-4"/>
        <input type="text" id="last-name" placeholder="Last Name" class="form-control col-md-4" />
        <input type="text" id="age" placeholder="Age" class="form-control col-md-4" />
    </div>

    <br />
    <button class="btn btn-success" id="add-person">Add Person</button>
</div>

<div class="modal" id="editModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Person</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="id" />
                <input type="text" class="form-control" id="modalFirstName" placeholder="First Name" />
                <input type="text" class="form-control" id="modalLastName" placeholder="Last Name" />
                <input type="text" class="form-control" id="modalPersonAge" placeholder="Age" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/People.js"></script>
    }